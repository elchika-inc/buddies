{
  "name": "pawmatch-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "保護犬・保護猫とユーザーをマッチングするWebアプリケーション（モノレポ）",
  "keywords": [
    "react",
    "typescript",
    "pet-adoption",
    "monorepo"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:shared": "turbo run dev --filter=@pawmatch/shared",
    "dev:dog": "turbo run dev --filter=@pawmatch/dog-app",
    "dev:cat": "turbo run dev --filter=@pawmatch/cat-app",
    "build:shared": "turbo run build --filter=@pawmatch/shared",
    "build:dog": "turbo run build --filter=@pawmatch/dog-app",
    "build:cat": "turbo run build --filter=@pawmatch/cat-app",
    "install:all": "bun install"
  },
  "devDependencies": {
    "turbo": "^2.5.5",
    "vite-plugin-pwa": "^1.0.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.0",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

{
  "name": "pawmatch-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "保護犬・保護猫とユーザーをマッチングするWebアプリケーション（モノレポ）",
  "keywords": [
    "react",
    "typescript",
    "pet-adoption",
    "monorepo"
  ],
  "workspaces": [
    "packages/cat",
    "packages/dog"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "deploy:all": "bun run deploy:dog && bun run deploy:cat",
    "deploy:dog": "(cd packages/dog; vercel --prod)",
    "deploy:cat": "(cd packages/cat; vercel --prod)"
  },
  "devDependencies": {
    "turbo": "^2.5.5",
    "vite-plugin-pwa": "^1.0.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.0",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

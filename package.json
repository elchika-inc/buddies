{
  "name": "pawmatch-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "保護犬・保護猫とユーザーをマッチングするWebアプリケーション（モノレポ）",
  "keywords": [
    "react",
    "typescript",
    "pet-adoption",
    "monorepo"
  ],
  "workspaces": [
    "packages/app",
    "packages/cat",
    "packages/dog"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "postinstall": "lefthook install",
    "sync-shared": "./scripts/sync-shared.sh",
    "predeploy": "npm run sync-shared",
    "deploy:all": "npm run predeploy && bun run deploy:dog && bun run deploy:cat",
    "deploy:dog": "npm run predeploy && (cd packages/dog; vercel --prod)",
    "deploy:cat": "npm run predeploy && (cd packages/cat; vercel --prod)",
    "deploy:app": "npm run predeploy && (cd packages/app; vercel --prod)",
    "dev:app": "cd packages/app && npm run dev",
    "dev:app:dog": "cd packages/app && npm run dev:dog",
    "dev:app:cat": "cd packages/app && npm run dev:cat"
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "clsx": "^2.0.0",
    "graphql": "^16.11.0",
    "lucide-react": "^0.263.1",
    "next": "^14.0.0",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swipable-tinder-card": "^1.0.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lefthook": "^1.12.3",
    "postcss": "^8.4.27",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.0",
    "turbo": "^2.5.5",
    "typescript": "^5.0.2",
    "vite-plugin-pwa": "^1.0.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.0",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

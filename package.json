{
  "name": "pawmatch",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "保護犬・保護猫とユーザーをマッチングするWebアプリケーション",
  "keywords": [
    "react",
    "typescript",
    "pet-adoption"
  ],
  "scripts": {
    "dev": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "start": "cd app && npm run start",
    "lint": "cd app && npm run lint",
    "lint:fix": "cd app && npm run lint:fix",
    "type-check": "cd app && npm run type-check",
    "clean": "cd app && npm run clean",
    "deploy": "cd app && npm run deploy",
    "deploy:dog": "cd app && npm run deploy:dog",
    "deploy:cat": "cd app && npm run deploy:cat",
    "deploy:all": "node scripts/deploy-all.js",
    "deploy:all:sh": "bash scripts/deploy-all.sh",
    "deploy:workers": "concurrently --names 'CRAWLER,DISPATCH,CONVERT' --prefix-colors 'cyan,magenta,yellow' 'cd crawler && npm run deploy' 'cd dispatcher && npm run deploy' 'cd converter && npm run deploy'",
    "deploy:apps": "concurrently --names 'DOG,CAT' --prefix-colors 'blue,green' 'npm run deploy:dog' 'npm run deploy:cat'",
    "dev:dog": "cd app && npm run dev:dog",
    "dev:cat": "cd app && npm run dev:cat",
    "api:install": "cd api && npm install",
    "api:dev": "cd api && npm run dev",
    "api:build": "cd api && npm run build",
    "api:deploy": "cd api && npm run deploy",
    "api:db:init": "cd api && npm run db:init",
    "api:db:migrate": "cd api && npm run db:migrate",
    "crawler:install": "cd crawler && npm install",
    "crawler:build": "cd crawler && npm run build",
    "crawler:test": "cd crawler && npm test",
    "crawler:cats": "cd crawler && npm run crawl:cats",
    "crawler:dogs": "cd crawler && npm run crawl:dogs",
    "crawler:dev": "cd crawler && npm run dev",
    "crawler:deploy": "cd crawler && npm run deploy",
    "dispatcher:deploy": "cd dispatcher && npm run deploy",
    "converter:deploy": "cd converter && npm run deploy",
    "dev:all": "npm run api:dev & npm run dev"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.27",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.1.0",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}

{
  "name": "buddies",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "description": "保護犬・保護猫とユーザーをマッチングするWebアプリケーション",
  "keywords": [
    "pet-adoption",
    "cloudflare-workers",
    "nextjs",
    "typescript",
    "monorepo"
  ],
  "author": "elchika-inc",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/elchika-inc/buddies.git"
  },
  "workspaces": [
    "frontend",
    "api",
    "crawler",
    "dispatcher",
    "admin",
    "shared",
    "lp"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.2",
  "scripts": {
    "// ========================================": "開発環境",
    "setup": "npm run db:reset && npm run db:generate-placeholders -- --dogs=5 --cats=5 && npm run db:seed -- --dogs=10 --cats=10",
    "setup:first-time": "npm install && npm run setup",
    "start": "npm run db:push && npm run dev",
    "dev": "concurrently --names 'APP,API' --prefix-colors 'cyan,yellow' 'npm:dev:app' 'npm:dev:api'",
    "dev:all": "concurrently --names 'APP,API,CRAWLER,DISPATCH,ADMIN' --prefix-colors 'cyan,yellow,green,magenta,blue' 'npm:dev:*'",
    "dev:refresh": "npm run db:reset && npm run db:seed -- --dogs=10 --cats=10 --clear",
    "dev:app": "npm run -w @buddies/frontend dev",
    "dev:api": "npm run -w @buddies/api dev",
    "dev:crawler": "npm run -w @buddies/crawler dev",
    "dev:dispatcher": "npm run -w @buddies/dispatcher dev",
    "dev:admin": "npm run -w @buddies/admin dev",
    "dev:lp": "npm run -w @buddies/lp dev",
    "// ========================================": "ビルド",
    "build": "npm run build --workspaces --if-present",
    "build:app": "npm run -w @buddies/frontend build",
    "build:api": "npm run -w @buddies/api build",
    "build:crawler": "npm run -w @buddies/crawler build",
    "build:dispatcher": "npm run -w @buddies/dispatcher build",
    "build:admin": "npm run -w @buddies/admin build",
    "build:lp": "npm run -w @buddies/lp build",
    "// ========================================": "品質チェック",
    "test": "npm run test --workspaces --if-present",
    "test:app": "npm run -w @buddies/frontend test",
    "test:api": "npm run -w @buddies/api test",
    "type-check": "npm run type-check --workspaces --if-present",
    "type-check:app": "npm run -w @buddies/frontend type-check",
    "type-check:api": "npm run -w @buddies/api type-check",
    "type-check:crawler": "npm run -w @buddies/crawler type-check",
    "type-check:dispatcher": "npm run -w @buddies/dispatcher type-check",
    "type-check:shared": "npm run -w @buddies/shared type-check",
    "type-check:admin": "npm run -w @buddies/admin type-check",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "lint:app": "npm run -w @buddies/frontend lint",
    "lint:api": "npm run -w @buddies/api lint",
    "lint:crawler": "npm run -w @buddies/crawler lint",
    "lint:dispatcher": "npm run -w @buddies/dispatcher lint",
    "lint:shared": "npm run -w @buddies/shared lint",
    "lint:admin": "npm run -w @buddies/admin lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "// ========================================": "デプロイ",
    "deploy:dog": "npm run -w @buddies/frontend deploy:dog",
    "deploy:cat": "npm run -w @buddies/frontend deploy:cat",
    "deploy:api": "npm run -w @buddies/api deploy",
    "deploy:crawler": "npm run -w @buddies/crawler deploy",
    "deploy:dispatcher": "npm run -w @buddies/dispatcher deploy",
    "deploy:admin": "npm run -w @buddies/admin deploy",
    "deploy:lp": "npm run -w @buddies/lp deploy",
    "deploy:frontend": "concurrently 'npm:deploy:dog' 'npm:deploy:cat'",
    "deploy:workers": "concurrently 'npm:deploy:api' 'npm:deploy:crawler' 'npm:deploy:dispatcher' 'npm:deploy:admin'",
    "deploy:all": "npm run deploy:workers && npm run deploy:frontend",
    "// ========================================": "データベース",
    "db:push": "npm run -w @buddies/api drizzle-kit:push",
    "db:studio": "npm run -w @buddies/api drizzle-kit:studio",
    "db:generate": "npm run -w @buddies/api drizzle-kit:generate",
    "db:reset": "rm -f api/.wrangler/state/v3/d1/miniflare-D1DatabaseObject/*.sqlite && npm run db:push",
    "db:seed": "tsx database/seed.ts",
    "db:generate-placeholders": "tsx database/generate-placeholders.ts",
    "// ========================================": "モニタリング",
    "tail:api": "npm run -w @buddies/api tail",
    "tail:crawler": "npm run -w @buddies/crawler tail",
    "tail:dispatcher": "npm run -w @buddies/dispatcher tail",
    "tail:admin": "npm run -w @buddies/admin tail",
    "// ========================================": "クリーンアップ",
    "clean": "npm run clean:all",
    "clean:all": "npm run clean:wrangler && npm run clean:dist && npm run clean:cache",
    "clean:wrangler": "find . -type d -name '.wrangler' -not -path './node_modules/*' -exec rm -rf {} + 2>/dev/null || true",
    "clean:dist": "find . -type d -name 'dist' -not -path './node_modules/*' -exec rm -rf {} + 2>/dev/null || true",
    "clean:cache": "find . -type d \\( -name '.next' -o -name 'coverage' \\) -not -path './node_modules/*' -exec rm -rf {} + 2>/dev/null || true",
    "clean:deps": "rm -rf node_modules **/node_modules",
    "// ========================================": "メンテナンス",
    "reinstall": "npm run clean:deps && npm install",
    "postinstall": "echo '✅ すべての依存関係がインストールされました'",
    "prepare": "husky",
    "// ========================================": "開発ツール",
    "check:deps": "npm outdated || true",
    "check:security": "npm audit --audit-level=moderate",
    "// ========================================": "画像処理管理",
    "images": "tsx scripts/ts/manage-images.ts",
    "images:status": "tsx scripts/ts/check-image-status.ts",
    "images:screenshot": "tsx scripts/ts/trigger-screenshot.ts",
    "images:convert": "tsx scripts/ts/trigger-conversion.ts",
    "// ========================================": "LP関連",
    "lp:screenshots": "npm run -w @buddies/lp screenshots"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250906.0",
    "@eslint/js": "^9.35.0",
    "@faker-js/faker": "^10.1.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "minimist": "^1.2.8",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "type-coverage": "^2.29.7",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "zod": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}

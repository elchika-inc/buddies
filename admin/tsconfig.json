{
  "extends": "../tsconfig.workers.json",
  "compilerOptions": {
    "types": ["@cloudflare/workers-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ESNext", "WebWorker", "DOM"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@buddies/shared/*": ["../shared/*"],
      "@buddies/shared": ["../shared/types/index.ts"],
      "@buddies/shared/r2-paths": ["../shared/src/utils/r2-paths.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
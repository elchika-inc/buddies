# PawMatch Crawler 環境設定例

# ベースURL (ペットのおうち)
CRAWLER_BASE_URL=https://www.pet-home.jp

# 最大ページ数 (多すぎるとサーバーに負荷をかけるので注意)
CRAWLER_MAX_PAGES=5

# リクエスト間隔 (ミリ秒) - 最低2秒は空けること
CRAWLER_REQUEST_DELAY=2500

# 最大リトライ回数
CRAWLER_MAX_RETRIES=3

# タイムアウト (ミリ秒)
CRAWLER_TIMEOUT=30000

# User-Agent (適切なボット識別子を使用)
CRAWLER_USER_AGENT=Mozilla/5.0 (compatible; PawMatchBot/1.0; +https://pawmatch.app/bot)

# 出力ディレクトリ
CRAWLER_OUTPUT_DIR=./output

# ログレベル (debug, info, warn, error)
LOG_LEVEL=info
{
  "name": "pawmatch-crawler",
  "version": "2.0.0",
  "description": "PawMatch pet data crawler with scheduling support",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "crawl": "tsx src/run-crawler.ts",
    "crawl:help": "tsx src/run-crawler.ts --help",
    "crawl:force": "tsx src/run-crawler.ts --force",
    "crawl:reset": "tsx src/run-crawler.ts --reset",
    "crawl:dry": "tsx src/run-crawler.ts --dry-run",
    "crawl:cats": "tsx src/crawlers/pet-home-cats.ts",
    "crawl:dogs": "tsx src/crawlers/pet-home-dogs.ts",
    "crawl:scheduled": "tsx src/scheduled-cat-crawler.ts",
    "crawl:now": "tsx src/scheduled-cat-crawler.ts",
    "scheduler": "tsx src/scheduler.ts",
    "scheduler:now": "tsx src/scheduler.ts --run-now"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "cron": "^3.5.0",
    "playwright": "^1.54.2",
    "tsx": "^4.6.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.0",
    "@types/cron": "^2.0.1",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2"
  },
  "keywords": [
    "crawler",
    "playwright",
    "pet",
    "adoption",
    "scheduler",
    "cron"
  ],
  "author": "PawMatch Team",
  "license": "MIT"
}

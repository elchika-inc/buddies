{
  "name": "@buddies/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Buddies Shared - Shared types, utilities and schemas",
  "author": "elchika-inc",
  "license": "ISC",
  "main": "./types/index.ts",
  "types": "./types/index.ts",
  "exports": {
    ".": "./types/index.ts",
    "./types": "./types/index.ts",
    "./types/*": "./types/*.ts",
    "./utils/*": "./utils/*.ts",
    "./r2-paths": "./src/utils/r2-paths.ts"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint 'types/**/*.{ts,tsx}' 'utils/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'types/**/*.{ts,tsx}' 'utils/**/*.{ts,tsx}' --fix",
    "format": "prettier --write '{types,utils}/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check '{types,utils}/**/*.{ts,tsx,json}'",
    "test": "echo \"No tests for shared types\""
  },
  "dependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250906.0",
    "@types/node": "^20.16.0",
    "typescript": "^5.6.0"
  }
}